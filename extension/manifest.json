{
  "manifest_version": 3,
  "name": "Image-Translator",
  "description": "translate images to english or desired language",
  "version":"1.0",
  "action":{
      "default_popup": "popup/popup.html"
  },
  "permissions":[
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions":[
    "https://image-translator-worker.hiep-qqnguyen.workers.dev/*",
    "https://*.onrender.com/*",
    "<all_urls>"
  ],
  "background":{
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'; img-src 'self' data: blob:"
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":[
        "content/overlay.js"
      ]
    }
  ],
  "web_accessible_resources":[
    {
      "resources":[
        "popup/vendor/tesseract/tesseract.min.js",
        "popup/vendor/tesseract/worker.min.js",
        "popup/vendor/tesseract-core/*",
        "popup/vendor/tesseract-lang/*"
      ],
      "matches":["<all_urls>"]
    }
  ],
  "icons":{
      "16": "images/16.png",
      "32": "images/32.png",
      "128": "images/128.png"
  }
}